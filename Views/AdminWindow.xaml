<Window x:Class="HotelAdminWpf8.Views.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelAdminWpf8.Views"
        mc:Ignorable="d"
        Title="Painel do Administrador"
       
        Background="#1E1E2F"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized" Height="488" Width="913">
    <!-- ðŸ”¹ Tela cheia -->

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Background="#2B2B3D" Grid.Column="0">
            <TextBlock Text="AdministraÃ§Ã£o" Foreground="White" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>
            <Button Content="Reservas Ativas" Tag="Reservas" Click="Menu_Click" Margin="0,6" Background="#3B3B50" Foreground="White"/>
            <Button Content="Clientes Cadastrados" Tag="Clientes" Click="Menu_Click" Margin="0,6" Background="#3B3B50" Foreground="White"/>
            <Button Content="Tipos de Quarto" Tag="Tipos" Click="Menu_Click" Margin="0,6" Background="#3B3B50" Foreground="White"/>
            <Button Content="Fazer Check-in" Tag="Checkin" Click="Menu_Click" Margin="0,6" Background="#3B3B50" Foreground="White"/>

            <Button x:Name="btnExcluirCliente"
        Content="Excluir Cliente"
        Width="150" Height="35"
        Background="#FF4444" Foreground="Black"
        Click="btnExcluirCliente_Click"
        IsEnabled="False"/>

            <Button Content="Sair" Tag="Sair" Click="Menu_Click" Margin="0,30,0,0" Background="#A83B3B" Foreground="White"/>
        </StackPanel>

        <Grid x:Name="ContentArea" Grid.Column="1" Background="#F5F5F5">
            <DataGrid x:Name="dgDados" AutoGenerateColumns="True" Background="White"
                      BorderBrush="#DDD" BorderThickness="1" RowHeight="36" FontSize="14" IsReadOnly="True"
                      />
            

        </Grid>
    </Grid>
</Window>
