<Window x:Class="HotelAdminWpf8.Views.CheckInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Check-in de Hóspede"
        Background="#1E1E2F"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    <!-- 🔹 Tela cheia -->

    <Grid>
      

        <Border Background="#2B2B3D"
                CornerRadius="12"
                Padding="40"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="480">
            <StackPanel>
                <TextBlock x:Name="txtNome"
           Text="Olá, Cliente!"
           Foreground="White"
           FontSize="20"
           FontWeight="Bold"
           Margin="0,0,0,20"/>
                <TextBlock Text="Check-in de Hóspede"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,0,30"
                           HorizontalAlignment="Center"/>

                <!-- Campo Email -->
                <TextBlock Text="Digite o e-mail do cliente:" 
                           Foreground="White"
                           FontSize="14"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="txtEmail"
                         Height="35"
                         Margin="0,0,0,15"
                         Background="#3B3B50"
                         Foreground="White"
                         BorderBrush="Transparent"
                         FontSize="14"
                         Padding="8"
                         />

                <!-- Campo CPF -->
                <TextBlock Text="Digite o CPF do cliente:" 
                           Foreground="White"
                           FontSize="14"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="txtCPF"
                         Height="35"
                         Margin="0,0,0,25"
                         Background="#3B3B50"
                         Foreground="White"
                         BorderBrush="Transparent"
                         FontSize="14"
                         Padding="8"
                         />

                <!-- Botão principal -->
                <Button Content="Confirmar Check-in"
                        Height="45"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderBrush="Transparent"
                        FontWeight="Bold"
                        FontSize="15"
                        Cursor="Hand"
                        Click="BtnCheckIn_Click"/>
                <!-- Status -->
                <TextBlock x:Name="txtStatus"
                           Margin="0,25,0,0"
                           FontWeight="Bold"
                           FontSize="14"
                           TextAlignment="Center"
                           Foreground="#F4F4F4"/>
                <Button Content="⟵ Voltar"
              Width="118" Height="38"
              Background="#A83B3B"
              Foreground="White"
              BorderBrush="Transparent"
              Cursor="Hand"
              Click="BtnVoltar_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
