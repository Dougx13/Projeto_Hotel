<Window x:Class="HotelAdminWpf8.Views.QuartoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gerenciar Quartos" Height="450" Width="600" WindowStartupLocation="CenterScreen"
        Background="#1E1E2F">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Gerenciar Quartos" Foreground="White" FontSize="22" FontWeight="Bold"/>

            <DataGrid x:Name="dgQuartos" AutoGenerateColumns="True"
                      Background="White" IsReadOnly="True" Height="280" Margin="0,10"/>

            <Button Content="Adicionar Quarto" Click="btnAdd_Click"
                    Width="150" Height="35" Background="#4A90E2" Foreground="White" BorderBrush="Transparent"/>
        </StackPanel>
    </Grid>
</Window>
